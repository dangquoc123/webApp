@model WebApplication1.ViewModels.RegisterVM
@{
    ViewData["Title"] = "Register";
}
<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <div class="col-lg-8">
            <div class="mb-4">
                <h4 class="font-weight-semi-bold mb-4">Register</h4>
                <form asp-action="Register" enctype="multipart/form-data"> 
                <div class="row">                    
                    <div class="col-md-6 form-group">
                        <label asp-for="@Model.FirstName" class="form-label my-3"></label><sup>*</sup>
                        <input asp-for="@Model.FirstName" class="form-control" type="text" placeholder="John">
                        <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group">
                        <label asp-for="@Model.LastName" class="form-label my-3"></label><sup>*</sup>
                        <input asp-for="@Model.LastName" class="form-control" type="text" placeholder="Doe">
                        <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group">
                        <label asp-for="@Model.Email" class="form-label my-3"></label><sup>*</sup>
                        <input asp-for="@Model.Email" class="form-control" type="text" placeholder="example@email.com">  
                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group">
                        <label asp-for="@Model.PhoneNumber" class="form-label my-3"></label><sup>*</sup>
                        <input asp-for="@Model.PhoneNumber" class="form-control" type="text" placeholder="+123 456 789">
                        <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group">
                        <label asp-for="@Model.Password" class="form-label my-3"></label><sup>*</sup>
                        <input asp-for="@Model.Password" class="form-control" type="text" placeholder="***"> 
                        <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group">
                        <label asp-for="@Model.Address" class="form-label my-3"></label><sup>*</sup>
                        <input asp-for="@Model.Address" class="form-control" type="text" placeholder="123 Street">
                        <span asp-validation-for="@Model.Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer border-secondary bg-transparent">
                     <button type="submit" class="btn btn-lg btn-block btn-primary font-weight-bold my-3 py-3">Register</button>
                </div>
                </form>
            </div>           
        </div>
    </div>
</div>

